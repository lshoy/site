{
  "name": "next-static-markdown-blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "preview": "serve -s -l 3000 out",
    "start": "next start -p 3000",
    "clean": "rimraf .next out",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "capture:screens": "tsx scripts/capture-mobile-shots.ts",
    "check:overflow": "tsx scripts/check-overflow.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "gray-matter": "latest",
    "next": "latest",
    "react": "latest",
    "react-dom": "latest",
    "rehype-stringify": "latest",
    "remark-gfm": "latest",
    "remark-parse": "latest",
    "remark-rehype": "latest",
    "serve": "latest"
  },
  "devDependencies": {
    "@eslint/js": "latest",
    "@playwright/test": "^1.56.1",
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "eslint": "latest",
    "prettier": "latest",
    "rimraf": "latest",
    "tsx": "^4.20.6",
    "typescript": "latest",
    "typescript-eslint": "latest",
    "unified": "latest"
  }
}
